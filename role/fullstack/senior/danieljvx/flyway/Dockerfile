FROM flyway/flyway:latest

ARG FLYWAY_USER
ARG FLYWAY_PASSWORD
ARG FLYWAY_URL
ARG FLYWAY_GROUP
ARG FLYWAY_LICENSE_KEY
ARG FLYWAY_EDITION

ENV FLYWAY_USER=DB_USER
ENV FLYWAY_PASSWORD=DB_PASSWORD
ENV FLYWAY_URL=jdbc:DB_TYPE://danieljvx-airportart:DB_PORT/DB_DATABASE?verifyServerCertificate=false&useSSL=true
ENV FLYWAY_GROUP=FLYWAY_GROUP
ENV FLYWAY_LICENSE_KEY=FLYWAY_LICENSE_KEY
ENV FLYWAY_EDITION=FLYWAY_EDITION

EXPOSE 8180
CMD ["flyway", "info"]
